<div class="container">
  <h1 class="text-center">Owners</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>More Information</th>
      </tr>
    </thead>
    <tbody>
      <% @owners.each do |owner| %>
        <tr>
          <td><%= owner.id %></td>
          <td><%= owner.name %></td>
          <td><%= link_to 'More Information', owner_path(owner), class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @owners %>
</div>
