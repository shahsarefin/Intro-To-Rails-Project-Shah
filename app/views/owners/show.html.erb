<div class="container">
  <h1 class="text-center">Owner Details</h1>
  <table class="table">
    <tbody>
      <tr>
        <th>ID</th>
        <td><%= @owner.id %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @owner.name %></td>
      </tr>
      <tr>
        <th>Phone</th>
        <td><%= @owner.phone_number %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @owner.email %></td>
      </tr>
      <tr>
        <th>Address</th>
        <td><%= @owner.address %></td>
      </tr>
    </tbody>
  </table>

  <h2>Adopted Breeds</h2>
  <% if @owner.breeds.any? %>
    <ul>
      <% @owner.adoptions.each do |adoption| %>
        <li>
          <%= adoption.breed.name %> (Adopted on: <%= adoption.adoption_date %>)
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>This owner has not adopted any breeds.</p>
  <% end %>

  <%= link_to 'Back to Owners', owners_path, class: 'btn btn-secondary' %>
</div>
