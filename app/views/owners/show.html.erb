<div class="container">
  <h1 class="text-center">Owner Details</h1>
  <table class="table">
    <tbody>
      <tr>
        <th>ID</th>
        <td><%= @owner.id %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @owner.name %></td>
      </tr>
      <tr>
        <th>Phone</th>
        <td><%= @owner.phone_number %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= @owner.email %></td>
      </tr>
      <tr>
        <th>Address</th>
        <td><%= @owner.address %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Back to Owners', owners_path, class: 'btn btn-secondary' %>
</div>
