<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <h1 class="text-center">Owner Details</h1>
      <table class="table">
        <tbody>
          <tr>
            <th>ID</th>
            <td><%= @owner.id %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @owner.name %></td>
          </tr>
          <tr>
            <th>Phone</th>
            <td><%= @owner.phone_number %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= @owner.email %></td>
          </tr>
          <tr>
            <th>Address</th>
            <td><%= @owner.address %></td>
          </tr>
        </tbody>
      </table>

      <h2 class="text-center mt-3">Adopted Breeds</h2>
      <% if @owner.breeds.any? %>
        <ul class="list-group">
          <% @owner.adoptions.each do |adoption| %>
            <li class="list-group-item">
              <strong>Breed:</strong> <%= adoption.breed.name %><br>
              <strong>Adoption Date:</strong> <%= adoption.adoption_date %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-center">This owner has not adopted any breeds.</p>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to 'Back to Owners', owners_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
</div>
