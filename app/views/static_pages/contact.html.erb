<div class="app-wrapper">
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h1>Contact Us</h1>
      <p>If you have any questions or need assistance, feel free to reach out by filling out the form below. Weâ€™re here to help you!</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form_with url: contact_path, method: :post, local: true do |form| %>
        <div class="form-group">
          <%= form.label :name, "Your Name" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :email, "Your Email" %>
          <%= form.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :message, "Your Message" %>
          <%= form.text_area :message, class: "form-control", rows: 5, required: true %>
        </div>

        <div class="form-group text-center">
          <%= form.submit "Send Message", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>

<!-- Toaster Notification -->
<% if flash[:notice] %>
  <div id="toaster" class="toast show bg-info text-white" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed; top: 20px; right: 20px;">
    <div class="toast-body">
      <%= flash[:notice] %>
    </div>
  </div>

  <script>
    setTimeout(function() {
      var toaster = document.getElementById('toaster');
      if (toaster) {
        toaster.classList.remove('show');
      }
    }, 5000); 
  </script>
<% end %>

