<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if current_page > 1 %>
      <li class="page-item">
        <%= link_to '« First', url_for(page: 1), class: 'page-link' %>
      </li>
      <li class="page-item">
        <%= link_to '‹ Prev', url_for(page: current_page - 1), class: 'page-link' %>
      </li>
    <% end %>

    <% (1..total_pages).each do |page_number| %>
      <li class="page-item <%= 'active' if page_number == current_page %>">
        <%= link_to page_number, url_for(page: page_number), class: 'page-link' %>
      </li>
    <% end %>

    <% if current_page < total_pages %>
      <li class="page-item">
        <%= link_to 'Next ›', url_for(page: current_page + 1), class: 'page-link' %>
      </li>
      <li class="page-item">
        <%= link_to 'Last »', url_for(page: total_pages), class: 'page-link' %>
      </li>
    <% end %>
  </ul>
</nav>
